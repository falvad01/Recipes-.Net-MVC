@using lab2.Controllers
@{
    ViewData["Title"] = "Create Recipe";
}

<!DOCTYPE html>


<head>
    <title>title</title>
</head>
<body>
<div>
    <form action="EditExistedRecipe" method="post">
        <div style="background-color:#D8FFBA;position: absolute">
            <label>Recipe Name--></label>
            <input type="text" name="recipeName" placeholder="Recipe Name" value="@ViewBag.recipeToEdit.Name"/>
        </div>
        <br>
        <br>

        <div style="background-color:#D8FFBA;position: absolute">

            <strong>Recipe Ingredients(Add with amount and unit and separated by commas)</strong>
        </div>
        <br>
        <textarea name="areaIngredients" cols="20" rows="10" runat="server" >@ViewBag.ingredients</textarea>

        <br>
        <div style="background-color:#D8FFBA;position: absolute">

            <strong>Recipe Steps(Separated by commas)</strong>
        </div>
        <br>
        <textarea name="areaSteps" cols="20" rows="10" runat="server">@ViewBag.steps</textarea>
        <br>
        <br>
        <input class="button" type="submit" value="Save recipe">

    </form>
</div>
</body>